<% include ../partials/header %>



    <div class="row">
        <h1 style="text-align: center;">Edit <%= bar.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
                <form action="/bars/<%= bar._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="bar[name]" value="<%= bar.name %>"> <!-- we use name atr. to grab the data from the req.body -->
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="number" name="bar[price]" value="<%= bar.price %>" min="0.01" step="0.01"> 
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" name="bar[image]" value="<%= bar.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="bar[description]" value="<%= bar.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/bars">Back</a>
        </div>
          
    </div>
        


<% include ../partials/footer %>